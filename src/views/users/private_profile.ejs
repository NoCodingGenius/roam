<%- include ../partials/header.ejs %>
  <div class="flex-container">
    <div>
      <img class="profile-image" src="https://cdn.dribbble.com/users/220527/screenshots/1376137/avatars.png">
      <p>Name: <%= user.full_name %> </p>
      <p>Date Joined: <%= user.join_date %> </p>
      <p>Current City: <%= user.current_city %> </p>
      <form action="/user/update/<%= user.id %>">
        <input type="Submit" name="edit-button" value="Edit Profile">
      </form>
    </div>
    <section>

    <% posts.forEach(function(post) {%>
      <p><a class="post-title" href="/show/<%= post.id %>"><%= post.title %></a></p>
        <form action="/post/update/<%= post.id %>">
          <input type="Submit" name="edit-button" value="Edit">
        </form>
        <form action="/post/delete/<%= post.id %>?_method=DELETE" method="POST">
          <button type="Submit" class="delete-button" name="delete-button" value="Delete">Delete</button>
        </form>
    <% }) %>

    </section>
</div>
  </body>
</html>

